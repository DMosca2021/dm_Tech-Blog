<div class='text-center' id='blog-card'>
  <h2>{{name}}</h2>
  <p>
    <span class='subject-text'>{{subject}}</span>
  </p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <a class='btn btn-primary' href="/edit" >Edit this Blog</a>
  </p>
</div>

{{#each comments as |comment|}}
  <div class='card comment' data-id='{{comment.id}}'>
    <div class='card-body'>
      <p>{{comment.content}}</p>
    </div>
    <div class='card-footer'>
      <p>By:
        {{comment.user.user_name}}
        added on
        {{format_date comment.date_created}}</p>
      {{#if comment.isUser}}
        <button class='btn' id='delete-comment'>Delete</button>
      {{/if}}
    </div>
  </div>
{{/each}}

{{#if logged_in}}
  <div class='col-md-6'>
    <form class='form add-comment-form'>
      <div class='form-group'>
        <label for='comment-content'>Add your comment:</label>
        <textarea
          class='form-input'
          id='comment-content'
          name='comment-content'
        ></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Add-Comment</button>
      </div>
    </form>
  </div>
{{/if}}

<script src='../js/comment.js'></script>